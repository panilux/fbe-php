// Test schema for default values
package test

// Numeric defaults
struct Config
{
    int32 timeout = 30;
    int32 retries = 3;
    double threshold = 0.95;
    float ratio = 1.5;
}

// String and boolean defaults
struct Settings
{
    bool enabled = true;
    bool debug = false;
    string name = "DefaultName";
    string path = "/var/log";
}

// Mixed defaults (some with, some without)
struct Order
{
    int32 id;              // No default (uses type default)
    string symbol;         // No default
    double price = 0.0;    // With default
    double volume = 0.0;   // With default
    double tp = 10.0;      // With default
    double sl = -10.0;     // With default (negative)
}

// Null defaults for optional types
struct OptionalFields
{
    int32? count = null;
    string? text = "Default";
    bool? flag = true;
    double? value;         // No default (null by default for optional)
}

